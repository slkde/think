<div class="d-goods-info-right fr">
    <h4 class="info-right-title">相关推荐</h4>
    <ul class="del-recommend-list">
        {volist name="recommend" id="vo"}
            <li>
                <a class="clearfix" href="/index.php/index/lease/details/info/{$vo.goods_id}.html">
                    <div class="fl del-recommend-img-wrap" style="background-image: url(__IMG__/goods-del-bg.png)">
                        <div class="del-recommend-img">
                            <img src="{$vo.goods_image_url}" alt="">
                        </div>
                    </div>
                    <div class="fl del-recommend-info">
                        <div class="name" style="width: 150px;overflow: hidden;">{$vo.goods_name}</div>
                        <div class="price"><span>最低：</span><span style="color: #c31f1f;">￥{$vo.lease_price}</span></div>
                        <div class="number">{$vo.total}件可租</div>
                    </div>
                </a>
            </li>
        {/volist}
    </ul>
</div>