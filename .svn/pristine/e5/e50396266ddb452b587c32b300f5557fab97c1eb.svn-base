	<script type="text/javascript">
		function saveReport(){
			var actictyInfo=$("textarea[name='acticty_info']").val();
			var startTime=$("#cdateinfo1").val();
			var endTime=$("#cdateinfo2").val();
			var passWord=$("input[name='password']").val();
			var wbAddress=$("input[name='wbaddress']").val();
			var zbAddress=$("input[name='zbaddress']").val();
			
			if(startTime==''||endTime==''||startTime==endTime){
                $(".roll-mask").show();
                $(".creat-activity-box").show();
                $("body").css("overflow","hidden");
	            writeCont("请输入有效活动时间");
	        }else{
	        	$.post("/index.php/index/roll/createAitivity",{acticty_info:actictyInfo,start_time:startTime,end_time:endTime,password:passWord,wbaddress:wbAddress,zbaddress:zbAddress},function(data){
	        		var data=JSON.parse(data);
	        		writeCont(data.msg);
	        		if(data.status==1)
	        		{
                        $(".roll-mask").hide();
                        $(".creat-activity-box").hide();
                        $("body").css("overflow","auto");
	        			setTimeout(function(){
		               		window.location.reload();
		               },3000);
	        		}
	        	});
//	        	window.location.href="/index.php/index/Roll/createAitivity/acticty_info/"+actictyInfo+"/start_time/"+startTime+"/end_time/"+endTime+"/password/"+passWord+"/wbaddress/"+wbAddress+"/zbaddress/"+zbAddress;     
	        }
        }
        $("#roll-creat-btn").on("click",function(){
			saveReport();
		});
		
		
		//实现日期选择联动
		var start = {
		    format: 'YYYY-MM-DD hh:mm:ss',
		    //festival:true,
		    minDate: $.nowDate({DD:0}), //最大日期
		    zIndex:4100,
		    choosefun: function(elem,datas){
		    	end.minDate = datas; //开始日选好后，重置结束日的最小日期
		    		
		    	var tempEnd = Date.parse(new Date(datas));
				tempEnd = tempEnd/1000+(7*24*3600);
		       	tempEnd=$.timeStampDate(tempEnd.toString(),1,'YYYY-MM-DD hh:mm:ss');
		        end.maxDate = tempEnd; //开始日选好后，重置结束日的最大日期
		        endDates();
		    }
		};
		var end = {
		    format: 'YYYY-MM-DD hh:mm:ss',
		    //festival:true,
		    zIndex:4100,
		    choosefun: function(elem,datas){
//		        end.maxDate = datas; //将结束日的初始值设定为开始日的最大日期
		    }
		};
		//这里是日期联动的关键        
		function endDates() {
		    //将结束日期的事件改成 false 即可
//		    end.trigger = true;
		    $("#cdateinfo2").jeDate(end);
		}
		$('#cdateinfo1').jeDate(start);
		$('#cdateinfo2').jeDate(end);
		
	</script>

	