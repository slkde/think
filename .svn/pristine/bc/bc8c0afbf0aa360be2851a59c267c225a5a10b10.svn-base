
$(document).ready(function() {
  //粒子背景特效
  $('body').particleground({
    dotColor: '#5cbdaa',
    lineColor: '#5cbdaa'
  });
  $("#captcha").click(function(){
     var src =  "/index.php/pyadminurl/login/captcha" ;
     $(this).attr('src',src);
  });
  //提交
  $(".submit_btn").click(function(){


	  var  username = $("input[name='username']").val();
	  var  password = $("input[name='password']").val();
	  var  captcha  = $("input[name='captcha']").val();

	  if(!username )
	  {
        alert('请输入账号！');
        return false;
	  }

	  if(!password )
	  {
        alert('请输入密码！');
        return false;
	  }

	  if(!captcha )
	  {
        alert('请输入验证码！');
        return false;
	  }
     
      var data = {'username':username,'password':password,'captcha':captcha} ;

	  $.post('/index.php/pyadminurl/login/login',data,function(data){

	    //var data = JSON.parse(data);

	      if(data.status == 1 )
	      {
	      	window.location.href = '/index.php/pyadminurl/index/index';
	      }else{
	      	 var src =  "/index.php/pyadminurl/login/captcha" ;
		     $("#captcha").attr('src',src);
	      	 alert(data.msg);
	      }

	  });



	});
});
