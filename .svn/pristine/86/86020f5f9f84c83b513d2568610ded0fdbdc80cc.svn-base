<style type="text/css">
	label.control-label {
		width: 80px;
	}
    .bjui-pageFooter > ul > li{ display: inline-block;float:none;text-align:center}
    .bjui-pageFooter > ul{ text-align: center }
</style>

<div class="bjui-pageContent">
	<form action="{:url('User/save')}" method="post" data-toggle="validate">
       
        <input type ="hidden"  name = "id" value = "{$user.id}" /> 
		<table class="table-bordered table-condensed table-hover" width="100%">
			<tbody>

				<tr>
					<td>
						<label for="j_custom_number" class="control-label x85">
								管理组：
						</label>
						{volist name = 'data' id ='v'}
						<input type="checkbox" name="group[]"  value='{$v.id}'  {if condition = " in_array($v.id,$group_ids)"} checked {/if}	data-toggle="icheck" data-label="{$v.title}">
                        {/volist}
					</td>
				</tr>


				<tr>
					<td>
						<label for="j_custom_number" class="control-label x85">
								账号：
							</label>
						<input type="text" name="username"  value = "{$user.username}" data-rule="required;length[6~12]">
					</td>
				</tr>
				<tr>
					<td>
						<label for="j_custom_number" class="control-label x85">
								密码：
							</label>
						<input type="password" name="password"  data-rule="length[6~12]">
					</td>
				</tr>

				<tr>
					<td>
						<label for="j_custom_number" class="control-label x85">
								登陆状态：
						</label>
						<input type="radio" name="status"  {if condition = "$user.status  == 1"} checked {/if} 	data-toggle="icheck" value = '1' data-label="启用" >
						<input type="radio" name="status"  {if condition = "$user.status  == 0"} checked {/if} 	data-toggle="icheck" value = '0' data-label="禁用">
					</td>
				</tr>

			</tbody>
		</table>
</div>
<div class="bjui-pageFooter">
	<ul>
		<li><button type="submit" class="but btn-blue" data-icon="save">保存</button></li>
		<li><button type="button" class="btn-close" data-icon="close">取消</button></li>
	</ul>
</div>
</form>