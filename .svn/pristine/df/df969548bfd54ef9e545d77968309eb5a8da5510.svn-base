<style type="text/css">
   .tableContent form table  thead tr th{background:#1078C1;color:#fff;}
   .bjui-pageHeader {padding:0px 5px;}
</style>

<!--排序请求链接-->
<div class="bjui-pageHeader">
	<form id="pagerForm" data-toggle="ajaxsearch" action="{:url('advcate/index')}" method="get">
	</form>
	
</div>

<div class="bjui-pageContent tableContent">
	<form name="sortform" data-toggle="ajaxform" action="{:url('advcate/sort')}" method="post">
		<table data-toggle="tablefixed" data-width="100%" data-nowrap="true">
			<thead>
				<tr style="height: 36px; line-height: 36px;">
					<th >ID</th>
					<th >分类名称</th>
					<th >操作
                    &nbsp;&nbsp;&nbsp;&nbsp;<a  href="{:url('advcate/add')}" 
					data-toggle="dialog" class="btn btn-green"
					data-id="Nav_add" data-mask="true"
					data-reload="true" data-width="400"
					data-height="150" 
                    data-on-close="refresh">添加分类</a>
                    </th>
				</tr>
			</thead>
			<tbody>

				{foreach  name ='data' item='v' key='k'}
				<tr data-id="{$k}">
				    <td>{$v.id}</td>
					<td>{$v.title}</td>
					<td>

					   <a href="{:url('advcate/save',['id' => $v['id']])}" class="btn btn-green" 
						data-toggle="dialog"
						data-id="advcate_save" data-mask="true"
						data-reload="true" data-width="400"
						data-height="150" 
	                    data-on-close="refresh">修改
	                   </a>
                        
                        {if condition ='$v.status == 1'}
                        <a href="{:url('advcate/status', ['id' => $v['id'] ,'status' => -1])}" class="btn btn-green" data-toggle="doajax" data-confirm-msg="确定禁用吗？">已启用</a>
                        {else}
                        <a href="{:url('advcate/status', ['id' => $v['id'] ,'status' => 1])}" class="btn btn-red" data-toggle="doajax" data-confirm-msg="确定启用吗？">已禁用</a>
                        {/if}
						


					</td>
				</tr>
				{/foreach}
			</tbody>
		</table>
	</form>
</div>

<div class="bjui-pageFooter">

</div>