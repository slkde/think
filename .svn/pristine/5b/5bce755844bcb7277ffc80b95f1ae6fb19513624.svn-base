<style type="text/css">
   .tableContent  table  thead tr th{background:#1078C1;color:#fff;}
   .bjui-pageHeader {padding:0px 5px;}
</style>

<!--排序请求链接-->
<div class="bjui-pageHeader">
	<form id="pagerForm" data-toggle="ajaxsearch" action="{:url('Group/index')}" method="get">
	</form>
	
</div>

<div class="bjui-pageContent tableContent">
	
		<table data-toggle="tablefixed" data-width="100%" data-nowrap="true">
			<thead>
				<tr style="height: 36px; line-height: 36px;">
					<th data-order-field="id" width="50">ID</th>
					<th >用户组名称</th>
					<th >操作
                    &nbsp;&nbsp;&nbsp;&nbsp;<a  href="{:url('Group/add')}" 
					data-toggle="dialog" class="btn btn-green"
					data-id="Group_add" data-mask="true"
					data-reload="true" data-width="400"
					data-height="135" 
                    data-on-close="refresh">添加用户组</a>
                    </th>
				</tr>
			</thead>
			<tbody>

				{foreach  name ='data' item='v' key='k'}
				<tr data-id="{$k}">
					<td>{$v.id}</td>
					<td>{$v.title}</td>
					<td>

	                    <a  class="btn btn-orange" href="{:url('Group/rule_group', ['id' => $v['id']])}" data-toggle="navtab" data-options="{ id:'Group-rule_group', faicon:'caret-right'}" data-fresh="true">分配权限</a>

					   <a href="{:url('Group/save',['id' => $v['id']])}" class="btn btn-green" 
						data-toggle="dialog"
						data-id="Group_save" data-mask="true"
						data-reload="true" data-width="400"
						data-height="150" 
	                    data-on-close="refresh">修改
	                   </a>

						<a href="{:url('Group/delete', ['id' => $v['id']])}" class="btn btn-red" data-toggle="doajax" data-confirm-msg="子导航也会永久删除，确定要删除吗？">删除</a>
					</td>
				</tr>
				{/foreach}
			</tbody>
		</table>
	
</div>

