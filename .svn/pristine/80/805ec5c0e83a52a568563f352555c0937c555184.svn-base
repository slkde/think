 <!DOCTYPE html>
<html>
<head>{include file="common@common/common"}</head>
<body>
{include file="common@common/head"}
{include file="common@common/toasttips"}

<link href="__CSS__/common.css" type="text/css" rel="stylesheet">
<link href="__CSS__/Roll_index.css" type="text/css" rel="stylesheet">
<link href="__CSS__/jedate.min.css" type="text/css" rel="stylesheet">

<div class="cont-wrapper {$game_name}">
	<!--roll房间主体-->
	<div class="roll-main-content clearfix bc">
		<!--主体左边房间部分-->
		<div class="roll-content-left fl">
			<div class="roll-hot-title clearfix" id="roll_type">
<!-- 				<input class="active" type="button" value="正在进行" />
				<input type="button" value="我参加的" />
				<input type="button" value="我创建的" /> -->
				<a {if condition="$type eq head"}class="active"{/if} href = "{:url('roll/index',['type' =>'head'])}" >正在进行</a>
				<a {if condition="$type eq myp"}class="active"{/if}  href = "{:url('roll/index',['type' =>'myp'])}" >我参加的</a>
				<a {if condition="$type eq myc"}class="active"{/if}  href = "{:url('roll/index',['type' =>'myc'])}" >我创建的</a>

			</div>
			<div class="roll-content-box bc clearfix" id="roll_act_box">
				<if condition="empty($info) neq true">
					<div class="clearfix">
					{foreach name="info" item="v" key="k" }
					<a href="/index.php/index/roll/roll_room/activity/{$v['id']}.html" class="roll-item fl">
					<div class="roll-item-head clearfix">
					<div class="fl roll-item-user">
					    <div class="roll-item-name over-hide">{$v['active_des']}</div>
					    <div class="roll-item-time">
					        <span>{$v['end_time']}开奖</span>
					        {notempty name="v['password']"}
					        <i class="icon iconfont">&#xe643;</i>
					        {/notempty}
					    </div>
					</div>
					<img class="fr roll-item-user-img" src="{$v['user_pic']}"/>
					</div>
					<div class="roll-item-body clearfix">
					{for start="0" end="4"}
					{if condition="empty($v['goods_info'][$i]) neq true"}
					<div class="fl roll-item-img"><img src="{$v['goods_info'][$i]['goods_image_url']}"/>
					    <div class="roll-item-goods-number">共{$v['goods_num']}件</div>
					</div>
					{/if}
					{/for}
					</div>
					<div class="roll-item-foot clearfix">
					<div class="fl">
					    <div class="roll-goods-price over-hide">￥<span>{$v['goods_price']}</span></div>
					    <div class="tip">饰品总值</div>
					</div>
					<div class="fr">
					    <div class="roll-user-number over-hide"><span>{$v['part_num']}</span>人</div>
					    <div class="tip">参与人数</div>
					</div>
					</div>

					</a>
					{/foreach}
					</div>
				</if>
				<!--分页-->
				<div class="roll-pages pager">
				{$page}
				</div>
			</div>

		</div>
		<!--主体右边创建部分-->
		 {include file="index@roll/right"}
	</div>
</div>


 <script  src = "__JS__/common.min.js"></script> 
{include file="common@common/foot"}
</body>